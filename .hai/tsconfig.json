{
  // Indicates whether files should be automatically compiled when saved
  "compileOnSave": false,
  "compilerOptions": {
    // Base directory to resolve non-relative module names
    "baseUrl": "./",
    // Output directory for compiled files
    "outDir": "./dist/out-tsc",
    // Ensure consistent casing in file names
    "forceConsistentCasingInFileNames": true,
    // Enable all strict type checking options
    "strict": true,
    // Ensure overridden methods are marked with override keyword
    "noImplicitOverride": true,
    // Disable accessing properties using string index signatures
    "noPropertyAccessFromIndexSignature": true,
    // Ensure all code paths return a value in functions
    "noImplicitReturns": true,
    // Report errors for fallthrough cases in switch statements
    "noFallthroughCasesInSwitch": true,
    // Generate source maps for debugging
    "sourceMap": true,
    // Don't generate corresponding .d.ts files
    "declaration": false,
    // Enable support for iterating iterables in ES5/ES3
    "downlevelIteration": true,
    // Enable support for decorators
    "experimentalDecorators": true,
    // Resolve modules using Node.js style
    "moduleResolution": "node",
    // Import helpers from tslib
    "importHelpers": true,
    // Target ECMAScript 2020
    "target": "es2020",
    // Use ES2020 module system
    "module": "es2020",
    // Include ES2020 and DOM type definitions
    "lib": [
      "es2020",
      "dom"
    ]
  },
  // Angular specific compiler options
  "angularCompilerOptions": {
    // Disable legacy message ID format for i18n
    "enableI18nLegacyMessageIdFormat": false,
    // Enable strict dependency injection checks
    "strictInjectionParameters": true,
    // Enable strict input binding checks
    "strictInputAccessModifiers": true,
    // Enable strict template checks
    "strictTemplates": true,
    // Skip type checking of declaration files
    "skipLibCheck": true
  }
}