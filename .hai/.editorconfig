# Editor configuration, see https://editorconfig.org
# This is the root .editorconfig file
root = true

# Default settings for all files
[*]
# Use UTF-8 character encoding
charset = utf-8
# Use spaces for indentation
indent_style = space
# Set indentation size to 2 spaces
indent_size = 2
# Ensure file ends with a newline
insert_final_newline = true
# Remove any whitespace characters at the end of lines
trim_trailing_whitespace = true

# TypeScript specific settings
[*.ts]
# Use single quotes for strings
quote_type = single

# Markdown specific settings
[*.md]
# Disable line length limit for markdown files
max_line_length = off
# Preserve trailing whitespace in markdown files as it can be significant
trim_trailing_whitespace = false